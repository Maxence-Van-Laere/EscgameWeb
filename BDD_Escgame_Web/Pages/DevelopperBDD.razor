    public string GetProfileImage(string photoFileName)
    {
        string defaultPhoto = "images/default_profil.jpg";

        if (string.IsNullOrEmpty(photoFileName))
        {
            return defaultPhoto;
        }

        var imagesFolderPath = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images");
        var photoFilePath = Path.Combine(imagesFolderPath, photoFileName);

        if (File.Exists(photoFilePath))
        {
            return $"/images/{photoFileName}"; 
        }

        return defaultPhoto;
    }


